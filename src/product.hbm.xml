<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="il.ac.shenkar.model.Product" table="products">

		<id name="id" column="ID">
		</id>

		<property name="price">
			<column name="price" />
		</property>

		<property name="name">
			<column name="name" />
		</property>

	</class>
</hibernate-mapping>